{
  "name": "quidax-books",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "DEBUG=development && nodemon -r esm src/index.js",
    "migrate": "npx sequelize-cli db:migrate",
    "seed": "npx sequelize-cli db:seed:all",
    "drop": "npx sequelize-cli db:drop",
    "create": "npx sequelize-cli db:create",
    "undo:seed": "npx sequelize-cli db:seed:undo:all",
    "test": "export NODE_ENV=test && yarn run drop && yarn run create && yarn run migrate && yarn run seed && mocha --no-timeout -r esm ./src/**/**/*.spec.js --exit"
  },
  "dependencies": {
    "argon2": "^0.28.2",
    "connect-redis": "^6.0.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^10.0.0",
    "esm": "^3.2.25",
    "express": "~4.16.1",
    "express-async-errors": "^3.1.1",
    "express-session": "^1.17.2",
    "express-validator": "^6.12.1",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1",
    "pg": "^8.7.1",
    "redis": "^3.1.2",
    "sequelize": "^6.6.5",
    "slug": "^5.1.0",
    "winston": "^3.3.3",
    "yup": "^0.32.9"
  },
  "optionalDependencies": {
    "nodemon": "^2.0.12"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^3.4.1",
    "mocha": "^9.1.1",
    "prettier": "^2.3.2",
    "sequelize-cli": "^6.2.0",
    "supertest": "^6.1.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run sync:env"
    }
  }
}
